{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run file",
            "type": "shell",
            "command": "odin run",
            "args": [
                "${file}",
                "-file",
                "-out:${fileDirname}\\${fileBasenameNoExtension}.exe"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}